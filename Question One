#include <iostream>

using namespace std;

int main()
{
  

  int myArray[4];
  int i;
  int atchya;
  
  for(i=0;i<5;i++) {
      cout<<"Enter a number";
      cin>>myArray[i];
      
  }
  
  for(i=0;i<5;i++) {
       
       atchya = myArray[i] + atchya;
       cout<<myArray[i]<<"\n";
       
       
     
  }
 
  cout<<atchya;
  
}
 
