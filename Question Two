#include <iostream>

using namespace std;

int main()
{
  

  int myArray[5];
  int userNum;
  int i;
  


  
  for(i=0;i<6;i++) {
       cout<<" Enter a number \n";
       cin>> myArray[i];
   
      
      
  }
  
  for(i=5;i>-1;i--) {
      
      cout<<myArray[i]<<"\n";
  }

  
}
 
