#include <iostream>

using namespace std;

int main()
{
  

  int myArray[7];
  int i;
  
  //set a for loop backword
  
  for(i=0;i<10;i++) {
      
      myArray[i] = i - 1;
      
  }
  
  for(i=0;i<10;i++) {
      
      cout<<myArray[i]<<"\n";
  }
  
}
  
  
  

  
  
